{
  "name": "potion-subgraph",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "auth-hosted": "graph auth --hosted-service",
    "auth-studio": "graph auth --studio",
    "prepare-local": "echo '{\"subgraphNetwork\": \"mainnet\"}' | jq -s '.[0] * .[1]' - ../../contracts/core/deployments/localhost.json | mustache - subgraph.template.yaml > subgraph.yaml",
    "prepare-hedging": "echo '{\"subgraphNetwork\": \"mainnet\"}' | jq -s '.[0] * .[1]' - ../../contracts/core/deployments/localhost.hedging.json | mustache - subgraph.template.yaml > subgraph.yaml",
    "prepare-mainnet": "echo '{\"subgraphNetwork\": \"mainnet\"}' | jq -s '.[0] * .[1]' - ../../contracts/core/deployments/mainnet.json | mustache - subgraph.template.yaml > subgraph.yaml",
    "prepare-ganache": "echo '{\"subgraphNetwork\": \"ganache\"}' | jq -s '.[0] * .[1]' - ../../contracts/core/deployments/ganache.json | mustache - subgraph.template.yaml > subgraph.yaml",
    "prepare-goerli": "echo '{\"subgraphNetwork\": \"goerli\"}' | jq -s '.[0] * .[1]' - ../../contracts/core/deployments/goerli.json | mustache - subgraph.template.yaml > subgraph.yaml",
    "prepare-goerli-independent": "echo '{\"subgraphNetwork\": \"goerli\"}' | jq -s '.[0] * .[1]' - ../../contracts/core/deployments/goerli.independent.json | mustache - subgraph.template.yaml > subgraph.yaml",
    "prepare-forked-goerli": "echo '{\"subgraphNetwork\": \"mainnet\"}' | jq -s '.[0] * .[1]' - ../../contracts/core/deployments/localhost.goerli.json | mustache - subgraph.template.yaml > subgraph.yaml",
    "create": "graph create potion-subgraph --node https://api.thegraph.com/deploy",
    "create-local": "graph create potion-subgraph --node http://localhost:8020",
    "remove-local": "graph remove --node http://localhost:8020/",
    "codegen": "graph codegen",
    "build": "graph build",
    "deploy": "graph deploy potion-subgraph --node https://api.thegraph.com/deploy/ --ipfs https://api.thegraph.com/ipfs/",
    "deploy-hosted": "graph deploy --product hosted-service",
    "deploy-studio": "graph deploy --studio",
    "deploy-local": "graph deploy potion-subgraph --node http://localhost:8020/ --ipfs http://localhost:5001 --version-label 0.0.1",
    "deploy-ganache": "yarn prepare:ganache && yarn build-deploy",
    "deploy-subgraph:ganache": "./wait-for-it.sh localhost:8545 -- sleep 1 && yarn deploy:ganache",
    "build-deploy": "yarn && yarn codegen && yarn create-local && yarn deploy-local",
    "test-unit": "RUST_BACKTRACE=full graph test",
    "coverage": "graph test -- -c",
    "lint": "eslint . --ext .ts --fix --ignore-path .gitignore",
    "format": "prettier --write src/**/*.ts tests/**/*.ts"
  }
}
