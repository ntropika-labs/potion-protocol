{
  "extends": "../../tsconfig.vue.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "**/*.stories.ts"],
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": ".",
    "rootDir": "../../",
    "paths": {
      "@/*": ["./src/*"],
      "@onboard-composable": [
        "./src/composables/useOnboard.ts",
        "./src/composables/useMockedOnboard.ts"
      ],
      "@vault-operator-utils": [
        "./src/helpers/vaultOperatorUtils.ts",
        "./src/helpers/mockedVaultOperatorUtils.ts"
      ],
      "@web-worker": ["./src/web-worker/index.ts", "./src/web-worker/test.ts"]
    },
    "importsNotUsedAsValues": "remove",
    "types": [
      "node",
      "vitest",
      "jsdom",
      "vite/client",
      "vue/macros",
      "@intlify/vite-plugin-vue-i18n/client",
      "cypress",
      "@testing-library/cypress"
    ]
  }
}
