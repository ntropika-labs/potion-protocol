{
  "name": "subgraph-queries",
  "private": true,
  "version": "0.0.0",
  "main": "./generated/schema.ts",
  "types": "./generated/schema.ts",
  "files": [
    "generated"
  ],
  "scripts": {
    "build": "graphql-codegen",
    "codegen": "graphql-codegen",
    "codegen-hv": "graphql-codegen -c graphql-hv.config.yml",
    "introspection": "graphql-codegen -c introspection.yml",
    "introspection-hv": "graphql-codegen -c introspection-hv.yml",
    "lint": "eslint --fix queries && eslint --fix queries-hv",
    "format": "prettier --write 'queries/**/*.{graphql,gql}' && prettier --write 'queries-hv/**/*.{graphql,gql}'"
  }
}
