{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "references": [
    {
      "path": "./tsconfig.vue.json"
    },
    {
      "path": "apps/potion-dapp"
    },
    {
      "path": "contracts/core"
    },
    {
      "path": "libs/ui-library"
    },
    {
      "path": "libs/subgraph-queries"
    }
  ],
  "exclude": [
    "node_modules",
    "tmp",
    "dist"
  ]
}
