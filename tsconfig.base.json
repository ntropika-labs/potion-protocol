{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "references": [
    {
      "path": "./tsconfig.vue.json"
    },
    {
      "path": "apps/potion-dapp"
    },
    {
      "path": "contracts/core"
    },
    {
      "path": "contracts/hedging-vault"
    },
    {
      "path": "libs/potion-ui"
    },
    {
      "path": "libs/subgraph-queries"
    },
    {
      "path": "libs/potion-router"
    },
    {
      "path": "libs/contracts-math"
    },
    {
      "path": "libs/potion-unocss"
    },
    {
      "path": "libs/dapp-types"
    }
  ],
  "exclude": ["node_modules", "tmp", "dist"]
}
